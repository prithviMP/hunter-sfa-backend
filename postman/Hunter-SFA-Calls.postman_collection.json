              "mode": "raw",
              "raw": "{\n    \"title\": \"Updated: Product Demo for Acme Corp\",\n    \"scheduled_at\": \"2023-08-16T15:00:00Z\",\n    \"duration\": 45,\n    \"description\": \"Rescheduled call to demonstrate our new product line and address specific requirements\",\n    \"agenda\": [\"Product introduction\", \"Demo of key features\", \"Custom implementation options\", \"Pricing discussion\", \"Next steps\"]\n}"
            },
