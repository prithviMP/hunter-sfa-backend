  "item": [
    {
      "name": "Calls",
      "description": "Endpoints for managing business calls",
      "item": [
        {
          "name": "Get All Calls",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "description": "JWT access token"
              }
            ],
            "url": {
              "raw": "http://localhost:7777/api/v1/calls?page=1&limit=10&search={{searchTerm}}&status={{status}}&startDate={{startDate}}&endDate={{endDate}}&userId={{userId}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "7777",
              "path": ["api", "v1", "calls"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number"
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Items per page"
                },
                {
                  "key": "search",
                  "value": "{{searchTerm}}",
                  "description": "Search term for call title, notes, etc."
                },
                {
                  "key": "status",
                  "value": "{{status}}",
                  "description": "Filter by status (scheduled, in_progress, completed, cancelled)"
                },
                {
                  "key": "startDate",
                  "value": "{{startDate}}",
                  "description": "Start date for filtering (YYYY-MM-DD)"
                },
                {
                  "key": "endDate",
                  "value": "{{endDate}}",
                  "description": "End date for filtering (YYYY-MM-DD)"
                },
                {
                  "key": "userId",
                  "value": "{{userId}}",
                  "description": "Filter by user ID"
                }
              ]
            },
            "description": "Get all calls with filtering, sorting and pagination"
          },
          "response": []
        },
        {
          "name": "Create Call",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "description": "JWT access token"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"title\": \"Product Demo for Acme Corp\",\n    \"scheduled_at\": \"2023-08-15T14:00:00Z\",\n    \"duration\": 30,\n    \"type\": \"sales\",\n    \"companyId\": \"{{companyId}}\",\n    \"contactId\": \"{{contactId}}\",\n    \"participants\": [\"{{userId}}\"],\n    \"description\": \"Scheduled call to demonstrate our new product line\",\n    \"agenda\": [\"Product introduction\", \"Demo of key features\", \"Pricing discussion\", \"Next steps\"],\n    \"reminders\": [\n        {\n            \"time\": \"2023-08-15T13:45:00Z\",\n            \"type\": \"notification\"\n        },\n        {\n            \"time\": \"2023-08-15T13:30:00Z\",\n            \"type\": \"email\"\n        }\n    ],\n    \"attachments\": [\"https://example.com/product-brochure.pdf\"]\n}"
            },
            "url": {
              "raw": "http://localhost:7777/api/v1/calls",
              "protocol": "http",
              "host": ["localhost"],
              "port": "7777",
              "path": ["api", "v1", "calls"]
            },
            "description": "Create a new scheduled call"
          },
          "response": []
        },
        {
          "name": "Get Call by ID",
          "request": {
            "method": "GET",
