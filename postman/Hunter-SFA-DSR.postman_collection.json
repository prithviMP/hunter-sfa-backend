  "item": [
    {
      "name": "Visits",
      "description": "Endpoints for managing sales visits",
      "item": [
        {
          "name": "Get All Visits",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "description": "JWT access token"
              }
            ],
            "url": {
              "raw": "http://localhost:7777/api/v1/dsr/visits?page=1&limit=10&startDate={{startDate}}&endDate={{endDate}}&status={{status}}&salesRepId={{salesRepId}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "7777",
              "path": ["api", "v1", "dsr", "visits"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number"
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Items per page"
                },
                {
                  "key": "startDate",
                  "value": "{{startDate}}",
                  "description": "Start date for filtering (YYYY-MM-DD)"
                },
                {
                  "key": "endDate",
                  "value": "{{endDate}}",
                  "description": "End date for filtering (YYYY-MM-DD)"
                },
                {
                  "key": "status",
                  "value": "{{status}}",
                  "description": "Visit status (planned, in_progress, completed, cancelled)"
                },
                {
                  "key": "salesRepId",
                  "value": "{{salesRepId}}",
                  "description": "Sales representative ID"
                }
              ]
            },
            "description": "Get visits with filtering and pagination"
          },
          "response": []
        },
